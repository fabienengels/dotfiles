Host *
  # Allow clients to add keys to the agent
  AddKeysToAgent yes
  # Allow completion on hostnames
  HashKnownHosts no
  # Enable compression by default
  Compression yes
  # Set TERM to xterm-256color by default (mainly for Ghostty)
  # https://ghostty.org/docs/help/terminfo#configure-ssh-to-fall-back-to-a-known-terminfo-entry
  SetEnv TERM=xterm-256color

# Set 1906 as default port for u-strasbg.fr hosts
Host *.u-strasbg.fr
  Port 1906
